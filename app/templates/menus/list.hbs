<div class="row">
  <div class="col">
    <h2>Shopping List for the
      {{#link-to "menus.view" model.id}}
        Week of {{model.week_of}}/{{model.month}}
      {{/link-to}}
    </h2>
  </div>
</div>
<!-- <hr> -->
{{#if shoppingList}}
  <div class="row pt-4">
    {{#each-in shoppingList as |location list|}}
      <div class="col">
        <div class="card">
          <div class="card-header">
            <strong>{{capitalize location}}</strong>
          </div>
          <ul class="list-group list-group-flush">
            {{#each-in list as |item data|}}
              <li class="list-group-item">{{capitalize item}}
                <ul>
                  {{#each data as |measu|}}
                    <li>
                      {{pluralize measu.quantity measu.measure}}
                    </li>
                  {{/each}}
                </ul>
              </li>
            {{/each-in}}
          </ul>
        </div>
      </div>
    {{/each-in}}
  </div>
{{else}}
  <div class="row justify-content-center">
    <div class="col-1">
      {{loader-ball-grid-pulse}}
    </div>
  </div>
{{/if}}
