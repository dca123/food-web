<div class="row pt-4 pb-2 justify-content-end">
  <div class="col">
    <h2>Create Menu</h2>
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" class="text-center">
            Monday
          </th>
          <th scope="col" class="text-center">
            Tuesday
          </th>
          <th scope="col" class="text-center">
            Wednesday
          </th>
          <th scope="col" class="text-center">
            Thursday
          </th>
          <th scope="col" class="text-center">
            Friday
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each meal_times as |meal_time|}}
          <tr>
            {{#each daysOfWeek as |day|}}
              <td>
                {{new-menu-day createMeal="createMeal"}}
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
