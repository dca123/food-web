<div class="row pt-4 pb-2">
  <div class="col-3">
    <h2>Create Menu for</h2>
  </div>
  <div class="col-4">
    {{#power-select options=weeks disabled=weekSaved selected=(find-by 'id' weekDestination weeks)  placeholder="Select a Week" onchange=(action "changeWeek") as |week|}}
      {{week.value}}
    {{/power-select}}
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" style="width: 20%" class="text-center">
            Monday
          </th>
          <th scope="col" style="width: 20%" class="text-center">
            Tuesday
          </th>
          <th scope="col" style="width: 20%" class="text-center">
            Wednesday
          </th>
          <th scope="col" style="width: 20%" class="text-center">
            Thursday
          </th>
          <th scope="col" style="width: 20%" class="text-center">
            Friday
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each meal_times as |meal_time|}}
          <tr>
            {{#each daysOfWeek as |day|}}
              <td>
                {{new-menu-day removeMeal="removeMeal" weekDestination=weekDestination weekModel=weekModel
                  disableMenu=disableMealSelector mealTime=meal_time dayOfWeek=day mealArray=meals weekSaved=weekSaved}}
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
