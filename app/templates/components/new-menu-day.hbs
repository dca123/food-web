<div class="row">
  <div class="col">
    <div class="card">
      <ul class="list-group list-group-flush">
        {{#each selectedMeals as |meal|}}
          <li class="list-group-item">{{meal}}</li>
        {{/each}}
      </ul>

    </div>
  </div>
</div>
<div class="row mt-2">
  <div class="col">
    {{#power-select options=meals onchange=(action "addMeal") as |meal|}}
      {{meal}}
    {{/power-select}}
  </div>
</div>
